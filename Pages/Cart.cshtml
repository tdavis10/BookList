@page
@model Amazon.Pages.CartModel
@{
}

<h2>Your basket</h2>

@*Make a table to display the books ordered*@

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
            
        </tr>
    </thead>
    @*View the Quantity, Title, and Price, and Subtotal*@
    <tbody>
        @foreach (var i in Model.basket.Items)
            {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>@i.Book.Price.ToString("c")</td>
            <td>@((i.Book.Price * i.Quantity).ToString("c"))</td>

            <td class="text-center">
                <form method="post" asp-page-handler="Remove">
                    <input type="hidden" name="BookId" value="@i.Book.BookId" />
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <button class="btn btn-sm, btn-danger">Remove</button>
                </form>
            </td>

        </tr>
            
            }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>


</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Order">Checkout</a>
</div>