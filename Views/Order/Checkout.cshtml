@model Order

<h2>Check Out</h2>
<p></p>

<form method="post" asp-controller="Order" asp-action="Checkout">

    <div asp-validation-summary="All" class="text-danger"></div>

    <h4>Ship To</h4>
    <div class="form-group">
        <label asp-for="FirstName">First Name:</label><input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name:</label><input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone:</label><input asp-for="Phone" class="form-control" />
    </div>

    <h4>Address</h4>

    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1:</label><input asp-for="AddressLine1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2:</label><input asp-for="AddressLine2" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City:</label><input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State">State:</label><input asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Zip">Zip:</label><input asp-for="Zip" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Country">Country:</label><input asp-for="Country" class="form-control" />
    </div>

    <div class="float-end">
        <input type="submit" class="btn btn-primary" value="Checkout" />
    </div>

</form>





