<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Amazon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/lib/font-awesome/easy/css/all.min.css" rel="stylesheet" />
</head>
<body>


    <div class="bg-dark text-white p-2 shadow fixed-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">Book List</div>
                <div class="col-6 text-right">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div class="col-4"><br /><br /><br /><vc:category></vc:category></div>
        <div class="col-8">
            <div class="container">
                <main role="main" class="pb-3">
                    <br />
                    <br />
                    @RenderBody()
                </main>
            </div>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - IS 413
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)

    </div>
</body>
</html>
